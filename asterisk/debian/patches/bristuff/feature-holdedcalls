+static int retrieve_call_exec(struct ast_channel *chan, void *data) {
+	int res=0;
+	struct ast_module_user *u;
+	char *uniqueid = (char *)data;
+	u = ast_module_user_add(chan);
+	    res = ast_retrieve_call(chan, uniqueid);
+	ast_module_user_remove(u);
+	return res;
+}
